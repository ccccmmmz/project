<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--        <androidx.viewpager.widget.ViewPager-->
        <!--            android:id="@+id/vp"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="100dp" />-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <com.test.commonporject.test.Flipper
                android:id="@+id/flipper"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="450dp" />
        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="insert"
            android:text="插入!" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="query"
            android:text="查询!" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="update"
            android:text="修改!" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="appInfo"
            android:text="查看应用信息" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="testPermission"
            android:text="测试权限" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="testMMKVStorage"
            android:text="mmkv存储字符串test" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="getMMKVStorage"
            android:text="获取上边儿mmkv存储的字符串test" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="turnToKt"
            android:text="跳转kotlin界面" />
    </LinearLayout>
</ScrollView>